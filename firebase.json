{
  "hosting": {
    "public": "build",

    "rewrites": [
      {
        "source": "/sitemap",
        "destination": "/sitemap.xml",
        "type": 301
      },
      {
        "source": "/sitemap/**",
        "destination": "/sitemap.xml",
        "type": 302
      },
      {
      "source": "**",
      "function": "api"
      }]

  }
}